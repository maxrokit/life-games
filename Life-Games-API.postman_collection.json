					"name": "Create Board - Glider",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Response has board ID\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.id).to.be.a('string');",
									"    pm.collectionVariables.set(\"boardId\", jsonData.id);",
									"});",
									"",
									"pm.test(\"Response contains HATEOAS links\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.links).to.be.an('object');",
									"    pm.expect(jsonData.links.self).to.exist;",
									"    pm.expect(jsonData.links.next).to.exist;",
